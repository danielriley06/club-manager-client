{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/typings/*"]
    }
  },
  "include": ["src"]
}
